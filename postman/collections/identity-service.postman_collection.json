                  "    pm.expect(jsonData.users).to.be.an('array');",
                  "});",
                  "",
                  "pm.test('Each user in array has required fields (id, name, email)', function () {",
                  "    const jsonData = pm.response.json();",
                  "    jsonData.users.forEach(function(user) {",
                  "        pm.expect(user).to.have.property('id');",
                  "        pm.expect(user).to.have.property('name');",
                  "        pm.expect(user).to.have.property('email');",
                  "    });",
                  "});",
                  "",
                  "pm.test('Each user id follows expected format (u + number)', function () {",
                  "    const jsonData = pm.response.json();",
                  "    jsonData.users.forEach(function(user) {",
                  "        pm.expect(user.id).to.match(/^u\\d+$/);",
                  "    });",
                  "});",
                  "",
                  "pm.test('Each user has valid email format', function () {",
                  "    const jsonData = pm.response.json();",
                  "    jsonData.users.forEach(function(user) {",
                  "        pm.expect(user.email).to.match(/^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/);",
                  "    });",
                  "});"
