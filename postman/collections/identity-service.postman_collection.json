          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Test for successful response",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has JSON content type', function () {",
                  "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
                  "});",
                  "",
                  "pm.test('Response body has user object', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('user');",
                  "});",
                  "",
                  "pm.test('User object has required fields (id, name, email)', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.user).to.have.property('id');",
                  "    pm.expect(jsonData.user).to.have.property('name');",
                  "    pm.expect(jsonData.user).to.have.property('email');",
                  "});",
                  "",
                  "pm.test('User id matches requested id', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const requestedId = pm.request.url.path[pm.request.url.path.length - 1];",
                  "    pm.expect(jsonData.user.id).to.eql(requestedId);",
                  "});",
                  "",
                  "pm.test('User name is a non-empty string', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.user.name).to.be.a('string');",
                  "    pm.expect(jsonData.user.name.length).to.be.greaterThan(0);",
                  "});",
                  "",
                  "pm.test('User email is a valid email format', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.user.email).to.match(/^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/);",
                  "});"
                ]
              }
