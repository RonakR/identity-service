        {
          "name": "Create User",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Test for successful user creation (201) or existing user (200)",
                  "pm.test('Status code is 201 (created) or 200 (existing)', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "});",
                  "",
                  "pm.test('Response has JSON content type', function () {",
                  "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
                  "});",
                  "",
                  "pm.test('Response body has user object', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('user');",
                  "});",
                  "",
                  "pm.test('User object has required fields (id, name, email)', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.user).to.have.property('id');",
                  "    pm.expect(jsonData.user).to.have.property('name');",
                  "    pm.expect(jsonData.user).to.have.property('email');",
                  "});",
                  "",
                  "pm.test('User id follows expected format (u + number)', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.user.id).to.match(/^u\\d+$/);",
                  "});",
                  "",
                  "// Test for 201 Created response",
                  "if (pm.response.code === 201) {",
                  "    pm.test('New user created - no existing flag', function () {",
                  "        const jsonData = pm.response.json();",
                  "        pm.expect(jsonData).to.not.have.property('existing');",
                  "    });",
                  "}",
                  "",
                  "// Test for 200 OK response (existing user)",
                  "if (pm.response.code === 200) {",
                  "    pm.test('Existing user returned - has existing flag set to true', function () {",
                  "        const jsonData = pm.response.json();",
                  "        pm.expect(jsonData).to.have.property('existing');",
                  "        pm.expect(jsonData.existing).to.be.true;",
                  "    });",
                  "}",
                  "",
                  "// Store user id for subsequent requests",
                  "if (pm.response.code === 201 || pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('userId', jsonData.user.id);",
                  "}"
                ]
              }
            }
